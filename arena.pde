  Arena() {
    // initialize the arena to the start grid
    reset_arena();
  }  
  
  int arenaSquareAt(PVector target) {
    float grid_spot_x = target.x / GRID_UNIT_SIZE;
    float grid_spot_y = target.y / GRID_UNIT_SIZE;
    
    // out of bounds
    if (grid_spot_x < 0 || grid_spot_x >= GRID_UNITS_WIDE || grid_spot_y < 0 || grid_spot_y >= GRID_UNITS_TALL) {
      return OUT_OF_BOUNDS;
    }  
    
    return arena_grid[int(grid_spot_y)][int(grid_spot_x)];
  }
  
  // reset the arena to the start grid
  void reset_arena() {
    for (int y = 0; y < GRID_UNITS_TALL; y++) {
      for (int x = 0; x < GRID_UNITS_WIDE; x++) {
        // update the start location
        if (start_grid[y][x] == TILE_START) {
          // set to the center of this tile
          start_location = new PVector(x * GRID_UNIT_SIZE + (GRID_UNIT_SIZE / 2), y * GRID_UNIT_SIZE + (GRID_UNIT_SIZE / 2));
        }
        arena_grid[y][x] = start_grid[y][x];
      }
    } 
  }
  
  void render() {
    rectMode(CORNER);
    for (int y = 0; y < GRID_UNITS_TALL; y++) {
      for (int x = 0; x < GRID_UNITS_WIDE; x++) {
        switch(arena_grid[y][x]) {
          case TILE_WALL:
            stroke(40);
            fill(255);
            break;
          default:
            stroke(0);
            fill(0);
            break;
        }
        rect(x * GRID_UNIT_SIZE, y * GRID_UNIT_SIZE,
          GRID_UNIT_SIZE - 1, GRID_UNIT_SIZE - 1);
        
      }
    }
  }
  
  // get the coordinates of the start location
  PVector get_start() {
    return start_location.get();
  }
  
